<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AnimalsTwo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/sceneform_ux_fragment"
            android:name="com.google.ar.sceneform.ux.ArFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.578" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/animals_two_return"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/home_icon" />

            <ImageView
                android:id="@+id/hippo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/hippopotamus" />

            <ImageView
                android:id="@+id/horse"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/horse" />

            <ImageView
                android:id="@+id/koala"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/koala_bear" />

            <ImageView
                android:id="@+id/lion"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/lion" />

            <ImageView
                android:id="@+id/reindeer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/reindeer" />

            <ImageView
                android:id="@+id/wolverine"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/wolverine" />

        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>